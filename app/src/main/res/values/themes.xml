<resources>
    <!-- Base application theme. -->
    <style name="Theme.PhotoGallery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ash_black</item>
        <item name="colorPrimaryVariant">@color/ash_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>


    <style name="TabTheme">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">#ADB1B9</item>
    </style>

    <style name="SearchViewText">
        <item name="android:fontFamily">@font/circular_std_book</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:paddingStart">@dimen/_19sdp</item>
        <item name="android:paddingEnd">@dimen/_19sdp</item>
        <item name="hintTextColor">#73000000</item>
        <item name="android:paddingTop">@dimen/_11sdp</item>
        <item name="android:paddingBottom">@dimen/_11sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">#D9000000</item>
    </style>

    <style name="Headings">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">#D9000000</item>
    </style>

    <style name="subHeadings">
        <item name="android:fontFamily">@font/circular_std_book</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">#8B94A5</item>
    </style>

    <style name="tagsTextStyle">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">#D9000000</item>
    </style>

    <style name="Headings2">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">#D9000000</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>